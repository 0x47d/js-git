{
  "name": "JS-Git Sample Chrome App",
  "version": "0.0.1",
  "manifest_version": 2,
  "offline_enabled": true,

  "description": "A tiny app that tests the various js-git libraries",
  "icons": {
    "16": "app/icons/icon-16.png",
    "128": "app/icons/icon-128.png"
  },

  "app": {
    "background": {
      "scripts": ["app/background.js"]
    }
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*",
    {"socket": [
      "tcp-connect:*:*",
      "tcp-listen::*",
      "udp-send-to::*",
      "udp-bind::*"
    ]}
  ]
}
